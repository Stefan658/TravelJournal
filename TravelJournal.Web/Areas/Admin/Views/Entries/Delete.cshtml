@model TravelJournal.Domain.Entities.Entry

<h2>Delete Entry</h2>

<p>Are you sure you want to delete this entry?</p>

<dl class="dl-horizontal">
    <dt>Title</dt>
    <dd>@Model.Title</dd>
</dl>

@using (Html.BeginForm("DeleteConfirmed", "Entries",
        new { area = "Admin", id = Model.EntryId, journalId = Model.JournalId },
        FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Back", "Index", new { journalId = Model.JournalId })
}
