@{
    Layout = null;
    var title = ViewBag.Title ?? "Admin";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - TravelJournal Admin</title>

    <!-- CSS (fara bundling, ca sa nu depindem de Styles.Render) -->
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/site.css")" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#adminNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("TravelJournal Admin", "Index", "Home", new { area = "Admin" }, new { @class = "navbar-brand" })
            </div>

            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Journals", "Index", "Journals", new { area = "Admin" }, null)</li>
                    <li>@Html.ActionLink("Entries", "Index", "Entries", new { area = "Admin" }, null)</li>
                    <li>@Html.ActionLink("Subscriptions", "Index", "Subscription", new { area = "" }, null)</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Back to Site", "Index", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="padding-top: 70px;">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TravelJournal</p>
        </footer>
    </div>

    <!-- JS (fara bundling, ca sa nu depindem de Scripts.Render) -->
    <script src="@Url.Content("~/Scripts/jquery-3.7.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
