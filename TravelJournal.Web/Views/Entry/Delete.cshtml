@model TravelJournal.Web.ViewModels.Entries.EntryViewModel

<h2>Delete Entry</h2>
<hr />

<p>Are you sure you want to delete this entry?</p>

<div>
    <strong>Title:</strong> @Model.Title <br />
    <strong>Created:</strong> @Model.CreatedAt
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.EntryId)
    @Html.HiddenFor(m => m.JournalId)

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Entry", new { journalId = Model.JournalId })" class="btn btn-secondary">
        Cancel
    </a>
}
