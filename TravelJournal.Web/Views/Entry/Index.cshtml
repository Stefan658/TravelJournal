@model IEnumerable<TravelJournal.Web.ViewModels.Entries.EntryViewModel>

<h2>Entries</h2>
<hr />

<a class="btn btn-primary"
   href="@Url.Action("Create", "Entry", new { journalId = ViewBag.JournalId })">
    + New Entry
</a>

<table class="table table-striped table-bordered" style="margin-top:20px;">
    <tr>
        <th>Title</th>
        <th>Created</th>
        <th style="width:150px;">Actions</th>
    </tr>

    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Title</td>
            <td>@e.CreatedAt.ToString("g")</td>
            <td>
                <a href="@Url.Action("Details", "Entry", new { id = e.EntryId })"
                   class="btn btn-info btn-sm">Details</a>

                <a href="@Url.Action("Edit", "Entry", new { id = e.EntryId })"
                   class="btn btn-warning btn-sm">Edit</a>

                <a href="@Url.Action("Delete", "Entry", new { id = e.EntryId })"
                   class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
</table>
