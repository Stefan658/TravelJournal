@model IEnumerable<TravelJournal.Web.ViewModels.Journals.JournalViewModel>

@{
    ViewBag.Title = "My Journals";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">My Journals</h2>

    <a class="btn btn-primary"
       href="@Url.Action("Create", "Journal")">
        + Create New Journal
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <!-- Empty state -->
    <div class="card p-4 text-center">
        <h5 class="mb-2">No journals yet</h5>
        <p class="text-muted mb-3">
            Start your first journal and keep your travel memories organized.
        </p>
        <a class="btn btn-primary"
           href="@Url.Action("Create", "Journal")">
            Create Your First Journal
        </a>
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th class="text-center">Entries</th>
                        <th>Created</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var journal in Model)
                    {
                        <tr>
                            <td class="fw-semibold">
                                @journal.Title
                            </td>
                            <td class="text-muted">
                                @journal.Description
                            </td>
                            <td class="text-center">
                                <span class="badge bg-secondary">
                                    @journal.EntryCount


                                </span>
                            </td>
                            <td>
                                @journal.CreatedAt.ToString("yyyy-MM-dd")
                            </td>
                            <td class="text-end">
                                <div class="d-flex gap-2 justify-content-end">

                                    <a class="btn btn-primary btn-sm px-3"
                                       href="@Url.Action("Details", "Journal", new { id = journal.JournalId })">
                                        Details
                                    </a>

                                    <a class="btn btn-success btn-sm px-3"
                                       href="@Url.Action("Index", "Entry", new { journalId = journal.JournalId })">
                                        Entries
                                    </a>

                                    <a class="btn btn-warning btn-sm px-3 text-white"
                                       href="@Url.Action("Edit", "Journal", new { id = journal.JournalId })">
                                        Edit
                                    </a>

                                    <a class="btn btn-danger btn-sm px-3"
                                       href="@Url.Action("Delete", "Journal", new { id = journal.JournalId })">
                                        Delete
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
